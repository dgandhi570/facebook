<div class= "container" >











<h1>All Users</h1>

<div class= "container" >
<br>
<%@users.each do |x| %>
    
<%if x.avatar.attached? %>
  <%= image_tag x.avatar, style: "width: 30px", class: "rounded-circle" %>
  <%end%>
 
<%= x.fname %>
<%= x.lname %>    .................     <%= x.email %> 

<% a = Invitation.where(user_id: x.id, friend_id: current_user.id, boolean: false)%>
<% if current_user.friend_with?(x) %>
    <%= link_to "Remove Friend", invitations_destroy_path , class: "btn btn-secondary"%>
<% elsif !a.nil? %>
    <%= link_to "Accept Request", invitations_update_path(invitation_id: a.ids[0]) , class: "btn btn-secondary"%>











<%if !Invitation.reacted?(current_user.id, x.id) %>
<%= link_to "Send Friend Request", invitations_create_path(ids: {id1: current_user.id, id2: x.id}) , class: "btn btn-secondary"%>
<% elsif !current_user.friend_with?(x) %>
<% a = Invitation.where(user_id: current_user.id, friend_id: x.id)%>
<%= link_to "Unsend Request", invitations_destroy_path(invitation_id: a.ids[0]) , class: "btn btn-secondary"%>
<%else%>
<%= link_to "Remove Friend", invitations_destroy_path , class: "btn btn-secondary"%>
<%end%>
<br>
<br>
<%end%>